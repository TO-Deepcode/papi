{
  "openapi": "3.1.0",
  "info": {
    "title": "CryptoPanic via Atlas Gateway (Read-Only)",
    "version": "1.0.0",
    "description": "CryptoPanic haber/portföy uçlarını güvenli şekilde proxy eden Vercel gateway. Header `X-API-Key` ile korunur; sunucu tarafında CRYPTOPANIC_TOKEN query'e eklenir."
  },
  "servers": [
    {
      "url": "https://your-vercel-project.vercel.app/api",
      "description": "Replace with your Vercel base URL + /api"
    }
  ],
  "components": {
    "securitySchemes": {
      "AtlasKey": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key",
        "description": "Your gateway API key (ATLAS_API_KEY)"
      }
    },
    "schemas": {}
  },
  "security": [
    {
      "AtlasKey": []
    }
  ],
  "paths": {
    "/v1/news/cryptopanic/posts": {
      "get": {
        "operationId": "gateway_news_cryptopanic_posts_get",
        "summary": "CryptoPanic Posts (tüm filtrelerle)",
        "parameters": [
          {
            "name": "kind",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "news",
                "media"
              ]
            }
          },
          {
            "name": "filter",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "rising",
                "hot",
                "bullish",
                "bearish",
                "important",
                "saved",
                "lol"
              ]
            }
          },
          {
            "name": "currencies",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "BTC,ETH,SOL (virgülle, en fazla 50)"
          },
          {
            "name": "regions",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "en,de,nl,es,fr,it,pt,ru,tr,ar,cn,jp,ko"
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            }
          },
          {
            "name": "public",
            "in": "query",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "following",
            "in": "query",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "metadata",
            "in": "query",
            "schema": {
              "type": "boolean"
            },
            "description": "PRO alanları (description,image)"
          },
          {
            "name": "approved",
            "in": "query",
            "schema": {
              "type": "boolean"
            },
            "description": "Startup/Enterprise plan için orijinal kaynak URL"
          },
          {
            "name": "panic_score",
            "in": "query",
            "schema": {
              "type": "boolean"
            },
            "description": "Her gönderi için panic_score ekler"
          },
          {
            "name": "format",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "json",
                "rss"
              ]
            },
            "description": "rss döndürmek için format=rss"
          }
        ],
        "responses": {
          "200": {
            "description": "OK (JSON veya RSS/XML)"
          },
          "401": {
            "description": "Unauthorized (X-API-Key eksik/yanlış)"
          },
          "500": {
            "description": "Server misconfig or upstream error"
          }
        }
      }
    },
    "/v1/news/cryptopanic/portfolio": {
      "get": {
        "operationId": "gateway_news_cryptopanic_portfolio_get",
        "summary": "CryptoPanic Portfolio (private)",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Server misconfig or upstream error"
          }
        }
      }
    }
  }
}